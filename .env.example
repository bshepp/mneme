# Environment variables for Mneme
# Copy this file to .env and update with your values

# Configuration
MNEME_CONFIG_PATH=./config/default.yaml
MNEME_LOG_LEVEL=INFO

# Python path
PYTHONPATH="${PYTHONPATH}:${PWD}/src"

# Data paths (optional overrides)
MNEME_DATA_DIR=./data
MNEME_CACHE_DIR=./cache
MNEME_RESULTS_DIR=./experiments/results

# Compute settings
MNEME_DEVICE=auto
MNEME_NUM_WORKERS=4

# External services (optional)
WANDB_API_KEY=your_wandb_key_here
MLFLOW_TRACKING_URI=http://localhost:5000

# Development settings
MNEME_DEBUG=false
MNEME_PROFILE=false